<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/android"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/loginErrorMsg"
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/login"
        android:textColor="#000000" />

    <EditText
        android:id="@+id/pword"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="15dp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
                    android:textColor="@color/text"
            android:textStyle="bold"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
        android:text="Welcome to Ali Pizza Store" />

    <EditText
        android:id="@+id/email"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:hint="Username"
        android:textColor="#000000"
        android:textSize="15dp" />

    <Button
        android:id="@+id/passres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="Forgot Password" />

    <Button
        android:id="@+id/registerbtn"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_above="@+id/passres"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignRight="@+id/login"
        android:layout_marginBottom="43dp"
        android:text="Register"
        android:textColor="#000000"
        android:textSize="13dp" />

    <Button
        android:id="@+id/login"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_above="@+id/registerbtn"
        android:layout_alignLeft="@+id/pword"
        android:layout_alignRight="@+id/textView"
        android:layout_marginBottom="43dp"
        android:text="Login"
        android:textColor="#000000"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/email"
        android:layout_alignRight="@+id/textView"
        android:layout_marginBottom="26dp"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:text="Username"
        android:textColor="@color/text"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pworda"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/pword"
        android:layout_alignLeft="@+id/textView2"
        android:layout_marginBottom="26dp"
        android:paddingBottom="3dp"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:text="Password"
        android:textColor="@color/text"
        android:textSize="16sp"
        android:textStyle="bold" />

</RelativeLayout>